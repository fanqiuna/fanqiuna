/* pages/posts/posts.wxss */
swiper{
    width: 100%;
    height: 460rpx;
}
swiper image{
    width: 100%;
    height: 460rpx;
}
.posts-container{
    display: flex;
    flex-direction: column;
    margin-top: 20px;
    margin-bottom: 10rpx;
    background-color:#fff;
    border-top:1px solid #ededed;
    border-bottom: 1px solid #ededed;
    padding-bottom:10px;
    float: left;
    margin-left: 6px;
}


.posts-image{
    width: 150px;
    height: 300rpx;
    margin-bottom: 30rpx;
    
}
.posts-content{
    color: #666;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    line-height: 40rpx;
    letter-spacing: 2rpx;
}
.posts-like{
    display:flex;
    flex-direction: row;
    margin-left: 20rpx;
    align-items: center;
}
.posts-like-image{
    margin-right: 16rpx;
}
.posts-like-font{
    margin-right: 40rpx;
    font-size: 26rpx;
}

